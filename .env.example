# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000 # Change this to your frontend URL in production (e.g., https://yourdomain.com)

# Admin Credentials (legacy JSON mode)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# Database Configuration (MariaDB/MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=poligon_db
DB_USER=poligon_user
DB_PASS=your_secure_password_here

# Image Upload Configuration
IMAGE_STORAGE_LIMIT=5 # in MB

# Session Secret (change in production!)
SESSION_SECRET=change_this_to_a_random_secret_in_production

# TinyMCE Configuration
TINYMCE_API_KEY=your_tinymce_api_key_here
REACT_APP_TINYMCE_API_KEY=your_tinymce_api_key_here

# AAI@EduHr SAML Configuration (Croatian Academic Authentication Infrastructure)
# Entry Point: URL za SAML SSO login (production ili Lab okruženje)
AAIEDUHR_SAML_ENTRY_POINT=https://login.aaiedu.hr/simplesaml/saml2/idp/SSOService.php
# Issuer: Vaša aplikacija (entity ID) - mora biti registrirana u AAI@EduHr Registru resursa
AAIEDUHR_SAML_ISSUER=https://yourdomain.com
# Callback URL: URL na koji AAI@EduHr šalje SAML response nakon prijave
AAIEDUHR_SAML_CALLBACK_URL=https://yourdomain.com/api/auth/callback/aaieduhr
# Certificate: Public key certifikat od AAI@EduHr IdP-a (preuzet iz metapodataka)
AAIEDUHR_SAML_CERT=